{% extends 'base.html.twig' %}

{% block title %}
  Hello HomeController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; }
  </style>

  <div class="root">
    <nav class="navbar navbar-light">
      <div class="container">
        <a class="navbar-brand"
          href="https://react-redux-realworld.netlify.app/">
          conduit
        </a>
        <ul class="nav navbar-nav pull-xs-right">
          <li class="nav-item">
            <a class="nav-link"
              href="https://react-redux-realworld.netlify.app/">
              Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link"
              href="https://react-redux-realworld.netlify.app/login">
              Sign in
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link"
              href="https://react-redux-realworld.netlify.app/register">
              Sign up
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="home-page">
      <div class="banner">
        <div class="container">
          <h1 class="logo-font">
            conduit
          </h1>
          <p>
            A place to share your Symfony knowledge.
          </p>
        </div>
      </div>
      <div class="container page">
            <div class="row">
              <div class="col-md-9">
      <div class="feed-toggle">
        <ul class="nav nav-pills outline-active">
          <li class="nav-item">
            <button type="button" class="nav-link">You Feed</button>
          </li>
          <li class="nav-item">
            <button type="button" class="nav-link active">Global Feed</button>
          </li>
        </ul>
      </div>
      {# content #}
      <div class="article-preview">

      {% for article in articles.articles %}
                    <div class="article-meta">
                      <a
                        href="https://react-redux-realworld.netlify.app/@Gerome"
                        >
                        <img src={{article.author.image}} alt={{article.author.username}}/>
                        
                        </a>
                         <div class="info">
                        <a
                          class="author"
                          href=""
                          >{{article.author.username}}</a
                        ><span class="date">{{article.createdAt}}</span>
                      </div>
                      <div class="pull-xs-right">
                        <button class="btn btn-sm btn-outline-primary">
                          <i class="ion-heart"></i> {{article.favoritesCount}}
                        </button>
                      </div>
                    </div>
                     <a
                      class="preview-link"
                      href={{ path('single_article',{'slug':article.slug}) }}
                      ><h1>{{article.title}}</h1>
                      <p>
                       {{article.body}}
                      </p>
                      <span>Read more...</span>
                      <ul class="tag-list">
                        <li class="tag-default tag-pill tag-outline">
                          welcome
                        </li>
                        <li class="tag-default tag-pill tag-outline">
                          introduction
                        </li>
                      </ul></a
                    >
                  </div>
           {% endfor %}
    </div>
    </div>
    </div>
    </div>




  </div>
{% endblock %}
